<%- include('../partials/header')%>

    <body
        class="bg-gradient-to-br from-red-50 to-orange-100 min-h-screen flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl w-full">
            <div class="text-center mb-8">
                <h2
                    class="text-4xl font-bold bg-gradient-to-r from-red-600 to-orange-600 bg-clip-text text-transparent">
                    Create Account
                </h2>
                <p class="mt-2 text-gray-600">Join our community today</p>
            </div>
            <form action="/signup" method="POST" class="bg-white p-8 rounded-2xl shadow-xl border border-red-100">
                <% if(errors.length>0){%>
                    <div class="bg-red-100 border-red-400 text-red-700 px-4 py-2 rounded relative mb-4" role="alert">
                        <h4>Error!</h4>
                        <ul class="list-disc list-inside space-y-1">
                            <% errors.forEach(error=>{%>
                                <li>
                                    <%= error%>
                                </li>
                                <%});%>
                        </ul>
                    </div>
                    <%}%>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <div class="space-y-2">
                                <label for="firstName" class="block text-sm font-semibold text-gray-700">
                                    First Name *
                                </label>
                                <input type="text" id="firstName" name="firstName" required
                                    value="<%= typeof firstName != undefined? oldInput.firstName:''%>"
                                    class="w-full px-4 py-3 border-2 border-red-200 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all duration-200 hover:border-red-300"
                                    placeholder="Enter your first name">
                            </div>
                            <div class="space-y-2">
                                <label for="lastName" class="block text-sm font-semibold text-gray-700">
                                    Last Name *
                                </label>
                                <input type="text" id="lastName" name="lastName" required
                                    value="<%= typeof lastName != undefined? oldInput.lastName:''%>"
                                    class="w-full px-4 py-3 border-2 border-orange-200 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-200 hover:border-orange-300"
                                    placeholder="Enter your last name">
                            </div>
                            <div class="space-y-2 md:col-span-2 lg:col-span-1">
                                <label for="email" class="block text-sm font-semibold text-gray-700">
                                    Email Address *
                                </label>
                                <input type="email" id="email" name="email" required
                                    value="<%= typeof email != undefined? oldInput.email:''%>"
                                    class="w-full px-4 py-3 border-2 border-pink-200 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition-all duration-200 hover:border-pink-300"
                                    placeholder="Enter your email">
                            </div>
                            <div class="space-y-2">
                                <label for="password" class="block text-sm font-semibold text-gray-700">
                                    Password *
                                </label>
                                <input type="password" id="password" name="password" required
                                    class="w-full px-4 py-3 border-2 border-rose-200 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 transition-all duration-200 hover:border-rose-300"
                                    placeholder="Enter your password">
                            </div>
                            <div class="space-y-2">
                                <label for="confirmPassword" class="block text-sm font-semibold text-gray-700">
                                    Confirm Password *
                                </label>
                                <input type="password" id="confirmPassword" name="confirmPassword" required
                                    class="w-full px-4 py-3 border-2 border-amber-200 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-all duration-200 hover:border-amber-300"
                                    placeholder="Confirm your password">
                            </div>
                            <div class="space-y-3 md:col-span-2 lg:col-span-3">
                                <label class="block text-sm font-semibold text-gray-700">
                                    User Type *
                                </label>
                                <div class="flex flex-wrap gap-4">
                                    <div
                                        class="flex items-center bg-gradient-to-r from-red-50 to-red-100 p-4 rounded-lg border-2 border-red-200 hover:border-red-300 transition-all duration-200">
                                        <input id="guest" name="usertype" type="radio" value="guest" required
                                            checked="<%= oldInput.usertype === 'guest'%>"
                                            class="h-5 w-5 text-red-500 focus:ring-red-500 border-red-300">
                                        <label for="guest" class="ml-3 text-sm font-medium text-red-700">
                                            Guest
                                        </label>
                                    </div>
                                    <div
                                        class="flex items-center bg-gradient-to-r from-orange-50 to-orange-100 p-4 rounded-lg border-2 border-orange-200 hover:border-orange-300 transition-all duration-200">
                                        <input id="host" name="usertype" type="radio" value="host" required
                                            checked="<%= oldInput.usertype === 'host'%>"
                                            class="h-5 w-5 text-orange-500 focus:ring-orange-500 border-orange-300">
                                        <label for="host" class="ml-3 text-sm font-medium text-orange-700">
                                            Host
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="md:col-span-2 lg:col-span-3">
                                <div
                                    class="flex items-start bg-gradient-to-r from-gray-50 to-red-50 p-4 rounded-lg border-2 border-gray-200">
                                    <input id="terms" name="terms" type="checkbox" required
                                        class="h-5 w-5 text-red-500 focus:ring-red-500 border-gray-300 rounded mt-1">
                                    <label for="terms" class="ml-3 text-sm text-gray-700">
                                        I agree to the
                                        <a href="#" class="text-red-500 hover:text-red-600 underline font-medium">
                                            Terms and Conditions
                                        </a>
                                        and
                                        <a href="#" class="text-orange-500 hover:text-orange-600 underline font-medium">
                                            Privacy Policy
                                        </a>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mt-8 flex flex-col sm:flex-row gap-4">
                            <button type="submit"
                                class="flex-1 group relative flex justify-center items-center py-4 px-6 border border-transparent text-base font-semibold rounded-xl text-white bg-gradient-to-r from-red-500 to-orange-500 hover:from-red-600 hover:to-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-300 ease-in-out transform hover:scale-105 shadow-lg">
                                Create Account
                            </button>

                            <div
                                class="flex-1 text-center sm:text-right flex items-center justify-center sm:justify-end">
                                <p class="text-sm text-gray-600">
                                    Already have an account?
                                    <a href="/login"
                                        class="font-semibold text-red-500 hover:text-red-600 underline transition-colors duration-200">
                                        Sign in here
                                    </a>
                                </p>
                            </div>
                        </div>
            </form>
        </div>
    </body>

    </html>